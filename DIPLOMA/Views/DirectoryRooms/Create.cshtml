@model DIPLOMA.Models.DirectoryRooms

@{
    ViewData["Title"] = "Создание - Номер";
}

<h1 class="mb-5">Создание</h1>

<h4>Номер</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DirectoryCategoryRoomsID" class="control-label"></label>
                <select asp-for="DirectoryCategoryRoomsID" class="form-control" asp-items="ViewBag.DirectoryCategoryRoomsID"></select>
            </div>
            <div class="form-group">
                <label asp-for="DirectoryTypeRoomsID" class="control-label"></label>
                <select asp-for="DirectoryTypeRoomsID" class="form-control" asp-items="ViewBag.DirectoryTypeRoomsID"></select>
            </div>
            <div class="form-group">
                <label asp-for="DirectoryStatusRoomsID" class="control-label"></label>
                <select asp-for="DirectoryStatusRoomsID" class="form-control" asp-items="ViewBag.DirectoryStatusRoomsID"></select>
            </div>
            <div class="form-group">
                <label asp-for="CostPerDay" class="control-label"></label>
                <input asp-for="CostPerDay" class="form-control" />
                <span asp-validation-for="CostPerDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberRoom" class="control-label"></label>
                <input asp-for="NumberRoom" class="form-control" />
                <span asp-validation-for="NumberRoom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Назад</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
