@model DIPLOMA.Models.DirectoryCategoryRooms

@{
    ViewData["Title"] = "Создание - Категория номеров";
}

<h1 class="mb-5">Создание</h1>

<h4>Категория номеров</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryRoom" class="control-label"></label>
                <input asp-for="CategoryRoom" class="form-control" />
                <span asp-validation-for="CategoryRoom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Назад</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
