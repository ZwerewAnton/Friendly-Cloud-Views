@model DIPLOMA.Models.DirectoryTypeRooms

@{
    ViewData["Title"] = "Создание - Тип";
}

<h1 class="mb-5">Создание</h1>

<h4>Вид номера</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TypeRoom" class="control-label"></label>
                <input asp-for="TypeRoom" class="form-control" />
                <span asp-validation-for="TypeRoom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Назад</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
